p, span, h1, h2, h3, h4, h5, ul li, a, i, b
	margin 0
	padding 0
	font-weight 100
	color #FFF

p
	font-size 18px
	
h1, h2, h3
	text-transform uppercase
	
h1, h2	
	line-height 80px
	
h3, h5
	line-height 38px
	font-weight 300 
	
h1
	font-size 80px

h2
	font-size 66px
	
h3
	font-size 36px
	&:before
		content: '|'
		line-height 32px
		color decor
		vertical-align top
		font-weight bold
		padding-right 8px

h5
	font-size 24px
	
i
	font-size 16px
	line-height 20px
	display block
	margin-top 10px