.site__header
	padding 30px
	margin-top 100px
	background-color #fff
	border-radius 4px
	position relative
	text-align center
	
	&__avatar
		position absolute
		top -60px
		// left 40px
		left 0
		right 0
		margin auto
		background-color #fff
		height 120px
		width 120px
		border-radius 50%
		&__image
			background-image url('img/avatar.jpg')
			background-size: cover
			border-radius 50%
			height 110px
			width 110px
			margin 5px
	
	&__social
		text-align right
		font-size 0
		opacity 0.7
		&__item
			display inline-block
			a
				background-color #fff
				display block
				width 36px 
				height 36px
				border-radius 50%
				padding 8px
				box-sizing border-box
				overflow hidden
				margin-left 2px 
				i
					height 20px
					width 20px
					display block
					background-size cover 
			&__facebook i
				background-image url('icons/fb.png')
			&__linkedin i
				background-image url('icons/in.png')
			&__github i
				background-image url('icons/gh.png')
			&__twitter i
				background-image url('icons/tw.png')
				
	&__info
		max-width 680px
		margin auto 
		&__title
			margin-top 20px 
			font-weight normal
			font-size 2.2rem
		&__desc
			margin-top 20px
			line-height 1.3
			font-size 1.3rem 
			color #797874 