.header
	height 72px
	position fixed
	background-color rgba(0, 0, 0, .12)
	top 0
	left 0
	right 0
	z-index 5
	transition all .3s ease-in-out
	@extend .shadow-1
	
	&--fixed
		height 56px
		background-color rgba(0, 0, 0, .95)
		@extend .shadow-2
	
	.container
		display flex
		flex-direction row
		align-items center
		justify-content space-between
		height 100%
		
	&__title
		font-size 18px
		font-weight 400
		color #fff
		transition all .3s ease-in-out
		
	&__link
		font-size 14px
		font-weight 300
		color #fff
		padding-left 24px
		transition all .3s ease-in-out
		height 36px
		background-size 18px
		background-repeat no-repeat
		background-position center left
		display inline-block
		cursor pointer
		line-height 36px
		margin-right 18px
		transition all .3s ease-in-out
		
		+hover()
			&:hover
				opacity .6
		
		&--twitter
			background-image url('../assets/twitter.svg')
			
		&--telegram
			background-image url('../assets/telegram.svg')
			
		+below(m)
			width 36px
			padding 0
			margin 0
			font-size 0
			background-position center right