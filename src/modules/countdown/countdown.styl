.countdown
	position absolute
	bottom 0
	left 0
	right 0
	z-index 1
	background-color rgba(0, 0, 0, .6)
	color #fff
	height 72px
	
	.container
		width 600px
		padding 0 12px

	&__header
		margin 6px 0
		display flex
		justify-content space-between
		align-items center
		flex-direction row
		
	&__title
		text-transform uppercase
		font-size 14px
	
	&__time
		display flex
		flex-direction row
		align-items center
		justify-content space-between
		text-align center
		
	&__unit
		margin 0
		
	&__time
		font-size 24px
		line-height 1
		
	&__label
		font-size 10px
		line-height 1